    "../build",
    "../configs",
    "../debug.js",
    "../enums",
    "../functional.js",
    "../keys",
    "../manualTestingAndDebug.js",
    "../misc",
    "../out",
    "../scripts",
    "../src/debug",
    "../src/other",
    "../src/test",
    "../src/main.ts",
    "../src/utils/fantasy-birds",
    "../src/utils/*.js*",
    // src/utils/fantasy-birds
  ],
}
